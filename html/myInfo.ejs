    <title>标题1</title>
    <link rel="stylesheet" href="/css/index.css"/>
</head>
<body>
    <div id="my" class="my">
        <div>
            <input id="text" type="text" placeholder="输入你的昵称" />
            <button id="btn">去发消息</button>
        </div>
    </div>
    <script id="adjust" src="/js/adjust.js"></script>
    <script src="/js/zepto.min.js"></script>
    <script src="/js/socket.io.js"></script>
    <script>
        (function(){
            var my=document.querySelector("#my");
            my.style.height=window.innerHeight+"px";
            my.style.width=window.innerWidth+"px";
            var text=$("#text");
            $("#btn").on("tap",function(){
                localStorage.setItem("user",text.val());
                location.href="/msg";
            });
        })();
    </script>
</body>
</html>